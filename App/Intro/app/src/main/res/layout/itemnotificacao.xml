<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardnotificacao"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="12dp"
    android:background="@drawable/bottom_navbar_background"


    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="388dp"
        android:layout_height="144dp"
        android:background="@color/thecolor">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="39dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/thecolor"
            app:layout_constraintBottom_toTopOf="@+id/testonot"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.258"
            app:srcCompat="@color/thecolor" />

        <TextView
            android:id="@+id/testonot"
            android:layout_width="323dp"
            android:layout_height="62dp"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="@color/bluish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="36dp"
            android:layout_weight="1"
            android:background="@color/thecolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/delete" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>