<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardid"
    android:layout_width="match_parent"
    android:layout_height="178dp"
android:layout_margin="12dp"
    android:background="@color/thecolor"
    app:cardCornerRadius="8dp"

    >


    <ImageView
        android:id="@+id/imgccupd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/Subtituloc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Tituloc"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/Subtituloc"
            android:layout_width="292dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:paddingBottom="2dip"
            android:textColor="@color/bla"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Tituloc" />

        <TextView
            android:id="@+id/Tituloc"
            android:layout_width="306dp"
            android:layout_height="94dp"

            android:layout_below="@+id/Subtituloc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-22dp"
            android:paddingBottom="2dip"
            android:textColor="@color/bla"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

