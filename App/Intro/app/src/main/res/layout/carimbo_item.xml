<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carimboid"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:layout_margin="12dp"
    android:background="@color/thecolor"

    >


    <ImageView
        android:id="@+id/imgccupd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/Subtituloc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Tituloc"
        app:srcCompat="@android:drawable/screen_background_dark_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgfiltrod"
            android:layout_width="299dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-1dp"
            android:background="@drawable/cupaoa"
            tools:srcCompat="?android:attr/panelBackground" />

        <TextView
            android:id="@+id/cTitulod"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgfiltrod"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="-34dp"
            android:text="Titulo"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cdatafimd"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cvale"
            android:layout_alignParentStart="true"
            android:layout_marginStart="224dp"
            android:layout_marginBottom="38dp"
            android:text="data" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
